generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ingredients {
  recipe_id          Int
  quantity           Decimal? @db.Decimal(5, 2)
  quantity_2         Decimal? @db.Decimal(5, 2)
  unit_of_measure_id String?  @db.VarChar(50)
  unit_of_measure    String?  @db.VarChar(50)
  description        String
  isgroupheader      Boolean  @default(false)
  id                 Int      @id @default(autoincrement())
  recipes            recipes  @relation(fields: [recipe_id], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model recipes {
  id           Int           @id @default(autoincrement())
  name         String        @unique @db.VarChar(50)
  instructions String?
  prep_time    Int?
  cook_time    Int?
  yields       Decimal?      @db.Decimal(10, 2)
  ingredients  ingredients[]
}
