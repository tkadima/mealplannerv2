generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ingredient {
  id                 Int          @id @default(autoincrement())
  recipeId           Int          @map("recipe_id")
  quantity           Decimal?     @db.Decimal(5, 2)
  quantity2          Decimal?     @db.Decimal(5, 2)  @map("quantity_2")
  unitOfMeasureId    String?      @db.VarChar(50)    @map("unit_of_measure_id")
  unitOfMeasure      String?      @db.VarChar(50)    @map("unit_of_measure")
  description        String
  isGroupHeader      Boolean                         @map("is_group_header")
  recipe             recipe   @relation(fields: [recipeId], references: [id], onDelete: NoAction, onUpdate: NoAction)
}

model recipe {
  id           Int          @id @default(autoincrement())
  name         String       @db.VarChar(50)
  instructions String? 
  prepTime     Int?          @map("prep_time")
  cookTime     Int?          @map("cook_time")
  yields       Decimal?      @db.Decimal(10, 2)
  ingredient   ingredient[]
}
